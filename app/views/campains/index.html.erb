<div class="page-header">
  <%= link_to new_campain_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Campain
  <% end %>
  <h3>Listing campains</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Cover</th>
        <th>Share</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @campains) do |campain| %>
        <td><%= campain.title %></td>
        <td><%= campain.description %></td>
        <td><%= image_tag campain.cover.url(:thumb) %></td>
        <td><%= social_share_button_tag(campain.title, url: update_profile_picture_campain_url(campain)) %></td>
        <td><%= link_to 'Show', campain %></td>
        <td><%= link_to 'Edit', edit_campain_path(campain) %></td>
        <td><%= link_to 'Destroy', campain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @campains, renderer: BootstrapPagination::Rails%>
</div>
